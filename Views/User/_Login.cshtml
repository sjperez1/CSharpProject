@model LoginUser

<h1>Login</h1>
<meta name="google-signin-client_id" content="227230677292-jgcgkjs35bkve6d8tj6u1t0oj6omfmaj.apps.googleusercontent.com">

<script src="https://apis.google.com/js/platform.js" async defer></script>

<form asp-controller="User" asp-action="Login" method="POST">
    <div class="mb-3">
        <label asp-for="LoginEmail"></label>
        <span asp-validation-for="LoginEmail" class="text-danger font-weight-bold"></span>
        <input asp-for="LoginEmail" class="form-control">
    </div>
    <div class="g-signin2" data-onsuccess="onSignIn"></div>

    <div class="mb-3">
        <label asp-for="LoginPassword"></label>
        <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold"></span>
        <input asp-for="LoginPassword" class="form-control">
    </div>
    <button>Submit</button>
</form>